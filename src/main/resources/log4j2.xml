<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="Console">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Logger name="com.ibm.si.jaql.jdbc4.Jdbc4Connection" level="info"/>
    <Logger name="com.ibm.si.jaql" level="warn"/>
    <Logger name="com.ibm.si.jaql.rest.ArielResultGSONAdapter" level="error"/>
    <!-- <Logger name="com.ibm.si.jaql.rest.ArielConnection" level="trace"/> -->
    <Root level="warn">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>